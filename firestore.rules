rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Kendi e-postanızla değiştirin!
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "mehmeteminacan13@gmail.com";
    }

    match /users/{userId} {
      allow read: if isAdmin();
      // Yöneticilerin yazmasına izin ver
      allow create, update, delete: if isAdmin(); 
    }
  }
}
