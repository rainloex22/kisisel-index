rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. MÃœÅTERÄ° HESAPLARI (users koleksiyonu)
    match /users/{userId} {
      
      // ğŸ”¥ Ã‡Ã–ZÃœM: Oturum aÃ§mÄ±ÅŸ herkesin (admin dahil) tÃ¼m kullanÄ±cÄ±larÄ± okumasÄ±na izin ver.
      allow read: if request.auth != null; 

      // Kendi belgesini gÃ¼ncelleme/silme iznini koru.
      allow update, delete: if request.auth != null && request.auth.uid == userId;
      
      // GiriÅŸ yapmÄ±ÅŸ herkes hesap oluÅŸturabilir.
      allow create: if request.auth != null;
    }
    
    // 2. DUYURULAR
    match /announcements/{document} {
        allow read: if true;
        allow create: if request.auth != null;
    }

    // 3. DÄ°ÄER HER ÅEY
    match /{document=**} {
        allow read, write: if false;
    }
  }
}
